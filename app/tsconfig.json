{
  "compilerOptions": {
    "outDir": "build",
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",

    "experimentalDecorators": true,

    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
